.about-section
  background-color #FAF2ED

  &__container
    position relative
    z-index 1
    padding-bottom 10px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 76px

  &__block
    width 100%
    text-align: center
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    margin-bottom 20px
    +above($breakpoints.sm)
      text-align: start
      flex-direction: row
      align-items: flex-end
      justify-content space-between
      margin-bottom 45px
    +above($breakpoints.md)
      margin-bottom 70px
    +above($breakpoints.xxl)
      margin-bottom 99px

  &__title
    width 100%
    background: linear-gradient(153deg, #aeddbc 15%, #cda063 135%);
    color: $color-white
    display: flex
    align-items: center
    justify-content center
    gap: 15px
    padding 15px 5px
    border-radius: 0 0 8px 8px;
    +above($breakpoints.sm)
      width 280px
      flex-direction: column
      align-items: flex-start
      justify-content flex-start
      gap: 13px
      padding 60px 5px 30px 30px
      border-radius: 0 0 12px 12px;
    +above($breakpoints.md)
      width 390px
      gap: 18px
      padding 80px 5px 50px 40px
      border-radius: 0 0 16px 16px;
    +above($breakpoints.xxl)
      width 480px
      gap: 20px
      padding 109px 5px 65px 70px
      border-radius: 0 0 20px 20px;

  &__text
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 12px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px

  &__text-item
    position relative
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-gold
      transform: rotate(45deg);
      top: -1px;
      left: -9px;
      width: 2px;
      height: 15px;
      +above($breakpoints.sm)
        top: 1px;
        left: -25px;
        height: 17px;
      +above($breakpoints.md)
        width: 3px;
        top: 1px;
        left: -25px;
        height: 20px;
      +above($breakpoints.xxl)
        top: 2px;
        height: 25px;

  &__card
    width 280px !important
    +above($breakpoints.sm)
      width 235px !important
    +above($breakpoints.md)
      width 308px !important
    +above($breakpoints.xxl)
      width 380px !important

  &__img
    width 100%
    height: auto
