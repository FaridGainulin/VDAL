.invest-section
  background: linear-gradient(173deg, #cda063 -35%, #aeddbc 100%);

  &__container
    position relative
    z-index 1
    text-align: center
    padding 25px 0 10px
    +above($breakpoints.sm)
      padding 40px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 90px 0 92px

  &__title
    color: $color-white
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 25px
    +above($breakpoints.md)
      padding-bottom 35px
    +above($breakpoints.xxl)
      padding-bottom 46px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    position relative
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    background-color $color-white
    padding 25px 5px
    +above($breakpoints.sm)
      width 235px !important
      padding 25px 5px 20px
    +above($breakpoints.md)
      width 308px !important
      padding 35px 5px 25px
    +above($breakpoints.xxl)
      width 380px !important
      padding 42px 5px 32px
    &:after
      content: ""
      position: absolute
      background-color rgba(55, 55, 55, 0.4)
      width 70%
      height: 1px
      left: 50%
      transform: translateX(-50%)
      top: 50px
      +above($breakpoints.sm)
        top: 66px
      +above($breakpoints.md)
        top: 88px
      +above($breakpoints.xxl)
        top: 103px

  &__card-text
    padding 25px 0 20px
    +above($breakpoints.sm)
      padding 40px 0 25px
    +above($breakpoints.md)
      padding 55px 0 35px
    +above($breakpoints.xxl)
      padding 66px 0 44px

  &__btn
    width 230px !important
    +above($breakpoints.sm)
      width 200px !important
    +above($breakpoints.md)
      width 260px !important
    +above($breakpoints.xxl)
      width 300px !important
