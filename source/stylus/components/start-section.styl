.start-section
  background-image: url('../images/start-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #DBEEFF

  &__container
    position relative
    z-index 1
    padding 25px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0
    +above($breakpoints.md)
      padding 60px 0
    +above($breakpoints.xxl)
      padding 70px 0 85px

  &__img
    position: absolute
    z-index -1
    height: auto
    bottom: 0
    width 570px
    right: -280px
    +above($breakpoints.sm)
      width 800px
      right: -210px
    +above($breakpoints.md)
      width: 1082px;
      right: -320px;
    +above($breakpoints.xxl)
      width 1285px
      right: -370px

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 20px

  &__sub-title
    padding 15px 0
    +above($breakpoints.sm)
      padding 20px 0
    +above($breakpoints.md)
      padding 25px 0
    +above($breakpoints.xxl)
      padding 30px 0 39px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 20px 0
    +above($breakpoints.md)
      gap: 25px 0
    +above($breakpoints.xxl)
      gap: 30px 0

  &__card
    text-align: start
    width 280px !important
    display: flex
    align-items: flex-start
    gap: 10px
    +above($breakpoints.sm)
      gap: 15px
      width: 242px !important;
    +above($breakpoints.md)
      gap: 16px
      width: 322px !important;
    +above($breakpoints.xxl)
      gap: 18px
      width 393px !important

  &__card-position
    +above($breakpoints.sm)
      margin-right 20px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    margin-top 25px
    +above($breakpoints.sm)
      align-items: flex-start
      margin-top 30px
      gap: 20px
    +above($breakpoints.md)
      margin-top 40px
      gap: 25px
    +above($breakpoints.xxl)
      margin-top 50px
      gap: 30px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 12px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 260px !important
      +above($breakpoints.xxl)
        width 300px !important

  &__agree-wrapper
    margin-top 8px
    +above($breakpoints.sm)
      margin-top 12px
    +above($breakpoints.md)
      margin-top 16px
    +above($breakpoints.xxl)
      margin-top 20px

  &__agree-wrapper .agree__text
    +above($breakpoints.sm)
      display: block
