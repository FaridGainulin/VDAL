.header

  &__container
    display: flex
    justify-content space-between
    align-items: center
    +above($breakpoints.sm)
      align-items: flex-start

  &__brand,
  &__call-me
    +above($breakpoints.sm)
      margin-top 22px
    +above($breakpoints.md)
      margin-top 22px
    +above($breakpoints.xxl)
      margin-top 22px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block
      flex-basis: 35%

  &__logo-wrapper
    display: flex
    justify-content center
    align-items: center
    background-color $color-white
    border: 3px solid $color-gold
    border-top: none
    border-radius:0 0 10px 10px
    width 80px
    height: 80px
    +above($breakpoints.sm)
      width 90px
      height: 100px
    +above($breakpoints.md)
      width 100px
      height: 110px
    +above($breakpoints.xxl)
      width 121px
      height: 135px

  &__logo
    width 60px
    height: 56px
    +above($breakpoints.sm)
      width 65px
      height: 58px
    +above($breakpoints.md)
      width 70px
      height: 60px
    +above($breakpoints.xxl)
      width 88px
      height: 77px

  &__call-me
    +above($breakpoints.sm)
      flex-basis: 35%
      display: flex
      justify-content flex-end

  &__brand-mobile
    position relative
    z-index 1
    text-align: center
    color: $color-white
    padding 5px 0
    margin-top 5px
    +above($breakpoints.sm)
      display: none
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color $color-gold
      width 100vw
      height: 100%
      top: 0
      left: 50%
      transform: translateX(-50%)
